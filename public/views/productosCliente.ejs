<!DOCTYPE html>
<html lang="en">
<head>
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous"
  />
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>productos</title>
</head>
<body class="bg-dark m-5">
<h1 class="text-center  text-secondary  text-opacity-10">Productos</h1>
    <% if(productos){%> 
        <div class="d-flex flex-row row ms-2 mb-5 bg-dark">
        <% productos.forEach((producto ,key) => { %> 
            <div class="card  m-3 bg-secondary bg-opacity-25  rounded-bottom rounded-3 " style="width: 15rem;">
                
                <div class="card-body   ">
                  <h5 class="card-title text-center bg-danger rounded-3 text-light pb-1"><%= producto.titulo %></h5>
                  <p class=" bg-secondary bg-opacity-25 p-2 text-light rounded-3"><small >Lorem ipsum dolor sit amet consectetur adipisicing elit.</small></p>
                  <p class=" text-center badge bg-success w-50 text-light me-4">$<%= producto.precio %> </p>
                  <b class="  badge bg-secondary bg-opacity-25 text-light pe-2 ps-2 ms-3">ID :  <%= key+1 %></b>
                </div>
              </div>
             
              <% }) %>
              
            </div>

    
    <% }else{  %> 

        <h1>No existen productos</h1>

    <% } %> 
</body>
</html>
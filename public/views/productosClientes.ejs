<!DOCTYPE html>
<html lang="en">
<head>
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous"
  />
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>productos</title>
</head>
<body class="bg-dark m-5">
<h1 class="text-center  text-secondary  text-opacity-10">SHOP</h1>
<%- include('../partials/navBarDark.ejs') %> 

<% if(productos.length){%> 
        <div class="d-flex flex-row row ms-2 mb-5 bg-dark">
        <% productos.forEach((producto ,key) => { %> 
            <div class="card  m-3 bg-secondary bg-opacity-25  rounded-bottom rounded-3 " style="width: 15rem;">
              <img src="../images/<%= producto.img %>" class="card-img-top w-50 pt-3 h-50 m-auto" alt="<%= producto.img %>" >
                <div class="card-body   ">
                  <h5 class="card-title text-center bg-primary rounded-3 pb-1"><a  class="text-decoration-none text-light "href="http://localhost:8080/api/productos/producto/<%= producto.id %>"><%= producto.titulo %></a></h5>
                  <p class=" bg-secondary bg-opacity-25 p-2 text-light rounded-3"><small ><%= producto.descripcion %></small></p>
                  <p class=" text-center badge bg-success w-50 text-light me-4">$<%= producto.precio %> </p>
                  <b class="  badge bg-secondary bg-opacity-25 text-light pe-2 ps-2 ms-3">ID : <%= producto.codigo %></b>
                 <a href="http://localhost:8080/api/carrito/add/<%= producto.id  %> " class="badge text-decoration-none bg-primary text-light ">ADD TO CAR</a>
                </div>
              </div>
             

              <% }) %>
              
            </div>

    
    <% }else{  %> 
      <div class=" ms-2 mb-5 bg-dark">
        <h1 class="text-center  text-secondary  text-opacity-10">No existen productos</h1>
      </div>
    <% } %> 

   
  <script src="index.js"></script>
 <script src="./socket.io/socket.io.min.js"></script>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</body>
</html>